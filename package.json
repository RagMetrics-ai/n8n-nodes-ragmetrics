{
  "name": "n8n-nodes-ragmetrics",
  "version": "0.1.3",
  "description": "Ragmetrics: Evaluate Chat Bots",
  "keywords": [
    "n8n-community-node-package",
    "AI Evaluate",
    "Chat Bots Monitoring",
    "Ragmetrics"
  ],
  "license": "MIT",
  "homepage": "https://www.ragmetrics.ai",
  "author": {
    "name": "Ragmetrics",
    "email": "info@ragmetrics.ai"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RagMetrics-ai/n8n-nodes-ragmetrics.git"
  },
  "engines": {
    "node": ">=20.15"
  },
  "main": "index.js",
  "scripts": {
    "build": "npx rimraf dist && tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials package.json",
    "lintfix": "eslint nodes credentials package.json --fix",
    "prepublishOnly": "npm run build && npm run lint -c .eslintrc.prepublish.js nodes credentials package.json",
    "test": "jest"
  },
  "files": [
    "dist",
    "package.json"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/RagmetricsApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Ragmetrics/Ragmetrics.node.js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@typescript-eslint/parser": "~8.32.0",
    "eslint": "^8.57.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.3",
    "glob": "^13.0.0",
    "gulp": "^5.0.0",
    "jest": "^30.1.3",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.4.1",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
}
